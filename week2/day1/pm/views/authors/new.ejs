<body>
  <main>
    <nav>
      <ul>
        <li><a href="/authors">Authors</a></li>
        <li><a href="/books">Books</a></li>
      </ul>
    </nav>

    <section>
      <fieldset>
        <legend>Create Author</legend>

        <form action="/authors" method='POST' autocomplete="off">
          <div>
            <label for="">name</label>
            <input type="text" name='name'>
          </div>
          <div>
            <label for="">age</label>
            <input type="number" name='age'>
          </div>
          <div>
            <label for="">is alive?</label>
            <input type="radio" name='isAlive' value='true'>True 
            <input type="radio" name='isAlive' value='false'>False
          </div>

          <button>Submit</button>
        </form>
      </fieldset>
    </section>
  </main>
</body>
</html>